<div class="wrapper">
    <div class="header">
        <span class="logo-action">
            <i class="logo fas fa-arrow-circle-left" onclick="window.location='/'"></i>
            <h1><i class="logo fas fa-car"></i>ezCars</h1>
        </span>
        <span class="btn-grp">
            <button onclick="window.location='/admin/rentedCars'" class="btn btn-light-outline">Rented Car List</button>
            <button onclick="window.location='/admin/carList'" class="btn btn-dark">Car List</button>
        </span>
    </div>
    <div class="content">
        <h1>User Requests ({{body.length}})</h1>
        {{#if body.length}}
        <ul class="carlist-ul">
            {{#each body}}
            <li class="cars">
                <span style="display: block;">
                    <p>Username : {{this.username}}</p>
                    <p>Date : {{fromDate}} to {{toDate}}</p>
                    <p>Time span : {{timePeriod}}</p>
                </span>
                <span class="carlist-action-btns">
                    <i class="tooltip action-logo fas fa-eye" onclick="window.location='/admin/request/{{this._id}}'"
                        style="color: blue;">
                        <span class="tooltiptext">View Details</span>
                    </i>
                    <i class="tooltip action-logo fas fa-vote-yea"
                        onclick="window.location='/admin/approveRequest/{{this._id}}'" style="color: green;">
                        <span class="tooltiptext">Approve Request</span>
                    </i>
                    <i class="tooltip action-logo fas fa-window-close"
                        onclick="window.location='/admin/rejectRequest/{{this._id}}'" style="color: red;">
                        <span class="tooltiptext">Reject Request</span>
                    </i>
                </span>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>

    <div class="content">
        <h1>User Extension Requests ({{extensionRequest.length}})</h1>
        {{#if extensionRequest.length}}
        <ul class="carlist-ul">
            {{#each extensionRequest}}
            <li class="cars">
                <span style="display: block;">
                    <p>Username : {{this.username}}</p>
                    <p>Extension Time Span : {{this.extensionPeriod}}</p>
                </span>
                <span class="carlist-action-btns">
                    <i class="tooltip action-logo fas fa-eye" onclick="window.location='/admin/request/ext/{{this._id}}'"
                        style="color: blue;">
                        <span class="tooltiptext">View Details</span>
                    </i>
                    <i class="tooltip action-logo fas fa-vote-yea"
                        onclick="window.location='/admin/approveExtenRequest/{{this._id}}'" style="color: green;">
                        <span class="tooltiptext">Approve Request</span>
                    </i>
                    <i class="tooltip action-logo fas fa-window-close"
                        onclick="window.location='/admin/rejectExtenRequest/{{this._id}}'" style="color: red;">
                        <span class="tooltiptext">Reject Request</span>
                    </i>
                </span>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>

</div>