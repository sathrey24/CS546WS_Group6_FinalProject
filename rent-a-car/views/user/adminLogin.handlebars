<div class="left-section">
    <img src="../../public/resources/images/bg-img.jpg" alt="bgimg" />
</div>
<div class="right-section">

    <form action="/adminLogin" method="post" id="admin-login-form">
        <h1>Login</h1>
        <div>
            <label><i class="fas fa-user"></i>Username : <br />
                <input type="text" name="username" id="ausername" class="txt" />
            </label>
        </div>
        <div>
            <label><i class="fas fa-key"></i>Password : <br />
                <input type="password" name="password" id="apassword" class="txt" />
            </label>
        </div>

        <div class="login-actions">
            <input type="submit" value="Login" class="btn btn-dark" />
            <input onclick="window.location='/'" value="Back" class="btn btn-light-outline" />
        </div>

        {{#if hasErrors}}
        <div class="err-strip">
            <p>{{{error}}}</p>
        </div>
        {{/if}}

    </form>
</div>