<div class="header">
    <span class="logo-action">
        <i class="logo fas fa-arrow-circle-left" onclick="window.location='/admin/carList'"></i>
        <h1><i class="logo fas fa-car"></i>ezCars</h1>
    </span>
</div>
<div class="content">
    <form action="/admin/addCar" method="post" id="add-car-form">
        {{#if hasErrors}}
        <div class="err-strip">
            <p>{{{error}}}</p>
        </div>
        {{/if}}
        <h1>Add car for rent</h1>
        <div class="main-grid">
            <div class="lgrid">
                <div>
                    <label for="model">Model : <br />
                        <input class="txt" type="text" value="{{model}}" name="model" id="model" />
                    </label>
                </div>
                <div>
                    <label for="type">Type : <br />
                        <input type="text" value="{{type}}" name="type" id="type" class="txt" />
                    </label>
                </div>
                <div>
                    <label for="color">Color : <br />
                        <input type="text" class="txt" value="{{color}}" name="color" id="color" />
                    </label>
                </div>
                <div>
                    <label for="numberDoors">Number of Doors : <br />
                        <input type="number" class="txt" value="{{numberDoors}}" name="numberDoors" id="numberDoors" />
                    </label>
                </div>
            </div>
            <div class="rgrid">
                <div>
                    <label for="seatingCapacity">Seating Capacity : <br />
                        <input type="number" class="txt" value="{{seatingCapacity}}" name="seatingCapacity"
                            id="seatingCapacity" />
                    </label>
                </div>
                <div>
                    <label for="hourlyRate">Hourly Rate : <br />
                        <input type="text" class="txt" value="{{hourlyRate}}" name="hourlyRate" id="hourlyRate" />
                    </label>
                </div>
                <div>
                    <label for="availability">Availability : <br />
                        <input type="text" class="txt" value="{{availability}}" name="availability" id="availability" />
                    </label>
                </div>
                <div>
                    <label for="engineType">Engine Type : <br />
                        <input type="text" class="txt" value="{{engineType}}" name="engineType" id="engineType" />
                    </label>
                </div>
            </div>
        </div>
        <div class="savebtn">
            <input type="submit" value="Add" class="btn btn-dark" />
        </div>
    </form>
</div>