<div class="wrapper">
    <div class="header">
            <i class="logo fas fa-arrow-circle-left" onclick="window.location='/userDashboard'"></i>
            <h1><i class="logo fas fa-car"></i>ezCars</h1>
    </div>
    <div class="content">
        <h1>Currently Renting ({{currentRequest.length}})</h1>
        <div class="scroll-container">
            {{#if currentRequest.length}}
            <ul class="carlist-ul">
                {{#each currentRequest}}
                <li class="cars">
                    Date : {{fromDate}} to {{toDate}}<br />
                    Time span : {{timePeriod}}<br />
                    <span class="carlist-action-btns">
                        <button onclick="window.location='/request/extension/{{this._id}}'">View Request/ <br/>
                        Extend Request</button>
                    </span>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
    </div>
    <div class="content">
        <h1>Past History ({{body.length}})</h1>
        <div class="scroll-container">
            {{#if body.length}}
            <ul class="carlist-ul">
                {{#each body}}
                <li class="cars">
                    Date : {{fromDate}} to {{toDate}}<br />
                    Time span : {{timePeriod}}</br>
                    <span class="carlist-action-btns">
                        <button onclick="window.location='/request/review/{{this._id}}'">View Request/ <br/>
                        Provide Feedback</button>
                    </span>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
    </div>
</div>